{
  "manifest_version": 3,
  "name": "目标进展智能总结",
  "version": "2.1",
  "description": "提取目标管理系统中的进展信息，并智能总结",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://goal.sankuai.com/*",
    "https://aigc.sankuai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://goal.sankuai.com/*"],
      "js": ["js/content.js"]
    }
  ]
}